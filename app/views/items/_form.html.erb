  }%>

<!-- /.page-title parallax -->
<section class="flat-contact-form">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="form-contact-form padding-contact">
          <!-- <form id="contactform" action="./contact/contact-process.php" method="post" accept-charset="utf-8"> -->

          <%= form_with(model: item, local: true) do |form| %>
            <% if item.errors.any? %>
              <div id="error_explanation">

                  <% item.errors.full_messages.each do |message| %>
                    <h5 style="color:rgba(219, 150, 144, 0.95)"><%= message %></h5>
                  <% end %>
              </div>
            <% end %>

            <div class="contact-form-name contact-form">
                <%= form.text_field :name, placeholder:"Title" %>
              <!-- <input type="text" name="name" id="name" placeholder="Name |" required=""/> -->
            </div>
            <div class="contact-form-comment contact-form">
              <%= form.text_area :content , placeholder:"Content"%>
            </div>
            <div class="contact-form">
              <%= form.label :price %>
              <%= form.number_field :price %>
            </div>
            <div class="contact-form">
              <!-- <#%= form.label : %> -->
              <%= form.file_field :item_images, multiple: true, accept: "image/jpeg, image/jpg, image/gif, image/png" %>

            </div>
            <!-- <div class="contact-form-url contact-form">
              <input type="text" name="url" id="url" placeholder="Website" required=""/>
            </div>
            <div class="contact-form-comment contact-form">
              <textarea name="message" id="message" placeholder="Messages" required=""></textarea>
            </div> -->
            <!-- <div class="btn-contact-form center">
              <button type="submit" class="flat-button-form">SEND MESSAGES</button>
            </div> -->
          <!-- </form> -->

            <div class="btn-contact-form center">
              <%= form.button class:"flat-button-form" %>
            </div>
          <% end %>
          <!-- /form -->
        </div>
        <!-- /.form-contact-form -->
      </div>
      <!-- /.col-md-12 -->
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container -->
</section>
