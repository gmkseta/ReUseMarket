
<section class="table">
      <div class="container">
      	<div class="row">
          <div class="col-2"></div>
    			<div class="col-8">
    				<div class="panel panel-default">
    					<div class="panel-body">
    						<div class="table-container" >
    							<table class="table table-fixed">
                    <thead>
                      <tr>
                        <th class="col-xs-2">미리보기</th>
                        <th class="col-xs-3">제목</th>
                        <th class="col-xs-1">분류</th>
                        <th class="col-xs-2">가격</th>
                        <th class="col-xs-1">판매자</th>
                        <th class="col-xs-1">구매자</th>
                        <th class="col-xs-2">진행상태</th>
                      </tr>
                    </thead>
    								<tbody>
                      <%@trades.each do |t|%>
          									<tr data-status="pagado" >
          										<td class="col-xs-2">
                                <%= image_tag t.item.item_images[0].url(:thumb) if t.item.item_images.present?%>
          										</td>
                              <td class="col-xs-3">
                                <%= t.item.name %>
                              </td>
                              <td class="col-xs-1">
                                <%= t.item.category %>
                              </td>
                              <td class="col-xs-2">
                                <%= t.item.price %> 원
                              </td>
                              <td class="col-xs-1">
                                <%= t.seller.name %>
                              </td>
                              <td class="col-xs-1">
                                <%= t.customer.name %>
                              </td>
                              <td class="col-xs-2">
                                <%= t.status %>
                                <% if user_signed_in? && (current_user == t.seller || current_user == t.customer) %>
                                <br>
                                  <%= link_to "상세보기", trade_detail_path(t)  %>
                                <% end %>
                              </td>
          									</tr>
                      <% end %>
    								</tbody>
    							</table>
    						</div>
    					</div>
    				</div>
    			</div>
    		</section>
